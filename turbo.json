{
    "$schema": "https://turborepo.org/schema.json",
    "pipeline": {
      "dev": {
        "cache": false
      },
      "build": {
        "dependsOn": ["^build"],
        "outputs": ["dist/**"]
      },
      "test": {
        "dependsOn": ["build"],
        "outputs": [],
        "inputs": ["src/**/*.jsx", "src/**/*.js", "test/**/*.js", "test/**/*.jsx"]
      },
      "lint": {
        "outputs": []
      },
      "deploy": {
        "dependsOn": ["build", "test", "lint"],
        "outputs": []
      }
    }
  }
  